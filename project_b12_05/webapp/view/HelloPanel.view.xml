<mvc:View controllerName="projectb1205.controller.HelloPanel"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Panel expandable="true" expanded="true">
        <headerToolbar>
            <Toolbar >
                <Text text="Hello Panel"/>
                <ToolbarSpacer />
                <Button text="Hello"/>
            </Toolbar>
        </headerToolbar>

        <Input />
        <Button text="Hello Panel Button" press=".onShowHello"/>
    </Panel>
</mvc:View>
